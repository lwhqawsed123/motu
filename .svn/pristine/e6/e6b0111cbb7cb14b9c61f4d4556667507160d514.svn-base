
.picture-box {
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 100px;
    position: relative;
    .picture-item {
        width: 210px;
        background-color: #fff;
        padding: 0 5px;
        box-sizing: border-box;
        margin-bottom: 10px;
        .picture-title {
            background-color: #f5f5f5;
            width: 100%;
            line-height: 20px;
            padding: 3px 6px;
            overflow: hidden;

            .picture-user {
                color: #5b9bd1;

                .picture-user-id {
                    &:hover {
                        text-decoration: underline;
                    }
                }

                .picture-user-nickname {
                    &:hover {
                        text-decoration: underline;
                    }
                }

            }

            .picture-dateline {}

        }





        .picture-image-box {
            width: 100%;
            height: 300px;
            border: 1px solid #efefef;
            box-sizing: border-box;
        }

        .picture-pass {
            color: #fff;
            line-height: 20px;
            background-color: #009900;
            padding: 0 6px;
        }
    }
    .picture-pagination{
        left: 10px;
        bottom: 10px;
    }
}