<script>
import { get_user_by_id } from "@/api/central/users/list.js";
import {
  list,
  get_by_id,
  withdraw_by_id,
  withdraw_all_by_ids,
  delete_by_id,
} from "@/api/central/msg/list.js";
import {
  gengerOptions,
  cmdTypeOptions,
  msgTypeOptions,
} from "@/utils/options/common.js";

export default {
  name: "users",
  data() {
    return {
      gengerOptions,
      cmdTypeOptions, // 指令类型
      msgTypeOptions, // 消息类型
      // 总条数
      totalNum: 0,
      // 查询数据
      formInline: {
        date: {
          startday: "",
          endday: "",
        }, // 日期
        f_gender: "",
        f_username: "",
        t_gender: "",
        t_username: "",
        guanfang: "",
        fenghao: "",
        msgtype: "",
        cmd: "",
        description: "",
        // 开始时间
        startday: "",
        //结束时间
        endday: "",
        // 当前显示条数
        pageSize: 20,
        // 当前显示页数
        pageNum: 1,
        offset: 0,
      },
      // 日期禁用项 禁用大于结束日期
      startOptions: {
        disabledDate: false,
      },
      // 日期禁用项 禁用小于开始日期
      endOptions: {
        disabledDate: false,
      },
      ext_stat: "",
      // 表格数据
      tableData: [],
      // 操作类型下拉框
      operationOptions: [],
      orderDetail: {
        orderForm: {},
        columns: {},
        orderDialog: false,
        tableColumns: [
          "id",
          "fromid",
          "toid",
          "msgtype",
          "fromClientType",
          "cmd",
          "msgcontent",
          "time",
        ],
      },
      // ====用户详情弹框=====
      userDetail: {
        timestamp: "",
        userid: "",
      },
      //====新增/修改=====
      ruleFormDialog: false,
      ruleFormTitle: "",
      refundData: {},
      // 添加表单数据
      ruleForm: {
        id: "",
        ids: "",
        isAll: false,
        isseven: "",
      },
      // 表单验证
      rules: {},
      // 多选框被选中的内容
      multipleSelection: [],
      audioUrl:
        "https://nim-nosdn.netease.im/NDI4NDk3OA==/bmltYV8xOTA3NTk3MTY4N18xNTk0MjgxMjM1NTg5Xzg1NzAxNTgzLTU0ZjMtNGQwOC1iMTljLTU2M2YwOTNmNzE3NA==",
    };
  },
  created() {
    // 获取默认开始时间和结束时间
    this.formInline.date.startday = this.getDateNow()[0];
    this.formInline.date.endday = this.getDateNow()[1];
    // 调用 获取列表 方法
    this.getOnlineList();
  },
  methods: {
    // 查看
    see(row) {
      const obj = {
        id: row.id,
        orderNo: row.orderNo,
      };
      this.$emit("changePage", "SEE", obj);
    },
    onSubmit() {
      this.getOnlineList();
    },
    // 获取列表
    getOnlineList() {
      let data = JSON.parse(JSON.stringify(this.formInline));
      data.startday = data.date.startday;
      data.endday = data.date.endday;
      data.offset = (data.pageNum - 1) * data.pageSize;
      delete data.date;
      if (data.guanfang) {
        data.guanfang = 1;
      } else {
        delete data.guanfang;
      }
      if (data.fenghao) {
        data.fenghao = 1;
      } else {
        delete data.fenghao;
      }
      list(data).then((xhrData) => {
        if (xhrData.code === 0) {
          xhrData.data.items.forEach((item) => {
            if (
              item.msgtype === "PICTURE" ||
              item.msgtype === "VIDEO" ||
              item.msgtype === "AUDIO" ||
              (item.msgtype === "CUSTOM" &&
                (item.cmd === "TEXT" || item.cmd === "RICH_TEXT")) ||
              item.cmd === "gift"
            ) {
              item.msgcontent = JSON.parse(item.msgcontent);
            }
          });
          this.tableData = xhrData.data.items;
          this.ext_stat = xhrData.data.ext_stat;
          this.totalNum = +xhrData.data.total_rows;
        }
      });
    },

    // 表格排序方式变化
    sortChange({ column, prop, order }) {
      console.log(order);
      // prop : 字段名; order : 排序方式
      this.formInline.orderByColumn = prop;
      let orderBy = "DESC";
      if (order === "ascending") {
        orderBy = "ASC";
      }
      this.formInline.isAsc = orderBy;
    },
    handleSizeChange(val) {
      // 注意：在改变每页显示的条数时，要将页码显示到第一页
      this.formInline.pageNum = 1;
      // 改变每页显示的条数
      this.formInline.pageSize = val;
      // 点击每页显示的条数时，显示第一页
      this.getOnlineList();
    },
    handleCurrentChange(val) {
      // 改变默认的页数
      this.formInline.pageNum = val;
      // 切换页码时，要获取每页显示的条数
      this.getOnlineList();
    },
    // 勾选/取消勾选
    handleSelectionChange(val) {
      this.multipleSelection = val;
    },
    handlePrev(value) {
      // 设置前一天/后一天
      this.prevDate(this.formInline.date, value);
      this.getOnlineList();
    },
    // 打开查看详情
    async openOrder(id) {
      let res = await get_by_id(id);
      if (res && res.code === 0) {
        this.orderDetail.orderForm = res.data.item;
        this.orderDetail.columns = res.data.columns;
        this.orderDetail.orderDialog = true;
      }
    },
    //  打开查看
    openDetail(id) {
      this.userDetail.timestamp = new Date().getTime();
      this.userDetail.userid = id;
    },

    // 打开编辑弹框
    async openEdit(title, id, isAll) {
      this.ruleFormTitle = title;
      if (title === "新增") {
        this.ruleFormDialog = true;
      } else if (title === "撤回消息") {
        this.ruleFormTitle = "确定撤回吗?";
        if (isAll) {
          this.ruleForm.id = "";
          this.ruleForm.ids = this.multipleSelection
            .map((item) => item.id)
            .join(",");
          this.ruleForm.isAll = true;
        } else {
          this.ruleForm.id = id;
          this.ruleForm.ids = "";
          this.ruleForm.isAll = false;
        }
        this.ruleFormDialog = true;
      } else {
        return false;
      }
    },
    // 提交编辑
    submitForm(formName) {
      if (this.ruleForm.isAll && this.multipleSelection.length === 0) {
        this.$message.error("您没有勾选任何消息哦！");
        return false;
      }
      this.$refs[formName].validate((valid) => {
        if (valid) {
          let ruleForm = JSON.parse(JSON.stringify(this.ruleForm));

          if (ruleForm.isAll) {
            // 批量撤回
            let data = {
              str_id: ruleForm.ids,
              isseven: ruleForm.isseven ? 1 : "",
            };
            withdraw_all_by_ids(data).then((res) => {
              if (res && res.code === 0) {
                this.$message.success({
                  message: res.info,
                });
                this.$refs["multipleTable"].clearSelection();
                this.closeRulesFormDialog(formName);
                this.getOnlineList();
              }
            });
          } else {
            let data = {
              id: ruleForm.id,
              data: {
                isseven: ruleForm.isseven ? 1 : "",
              },
            };
            withdraw_by_id(data).then((res) => {
              if (res && res.code === 0) {
                this.$message.success({
                  message: res.info,
                });
                this.closeRulesFormDialog(formName);
                this.getOnlineList();
              }
            });
          }
        } else {
          return false;
        }
      });
    },
    // 关闭修改弹框
    closeRulesFormDialog(formName) {
      this.$refs[formName].resetFields();
      this.ruleFormDialog = false;
    },
    // 删除消息
    deleteMsg(id) {
      this.$confirm("确认删除此消息吗,是否继续?", "提示", {
        confirmButtonText: "确定",
        cancelButtonText: "取消",
        type: "warning",
      })
        .then(() => {
          delete_by_id(id).then((res) => {
            if (res && res.code === 0) {
              this.$message.success({
                message: res.info,
              });
              this.getOnlineList();
            }
          });
        })
        .catch(() => {
          return false;
        });
    },
    // 配置表格 总计
    getSummaries(param) {
      const { columns, data } = param;
      const sums = [];
      columns.forEach((column, index) => {
        if (index === 0) {
          sums[index] = "合计";
          return;
        }
        if (column.property === "total_price") {
          const values = data.map((item) => Number(item["total_price"]));
          let total = 0;
          values.forEach((item) => {
            total += item;
          });
          sums[index] = total + "元";
        } else {
          sums[index] = "";
        }
      });

      return sums;
    },
  },
};
</script>
