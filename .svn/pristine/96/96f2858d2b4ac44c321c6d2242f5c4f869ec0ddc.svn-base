<script>
import {
  list,
  get_by_id,
  save_edit,
  delete_by_id
} from "@/api/organization/unions/see.js";
import { liveingStateOptions } from "@/utils/options/common.js";
import {
  commissionMethodOptions,
  roleOptions,
  payModeOptions,
  payDateOptions,
  memberRewardRuleOptions,
  groupRewardRuleOptions
} from "@/utils/options/organization.js";
import { preMonthToToday } from "@/utils/common";
import detail from "@/views/common_components/detail/detail.vue";

export default {
  name: "Unions_see",
  props: ["obj"],
  components: {
    detail
  },
  data() {
    return {
      commissionMethodOptions,
      liveingStateOptions,
      roleOptions,
      payModeOptions,
      payDateOptions,
      memberRewardRuleOptions,
      groupRewardRuleOptions,
      // 总条数
      totalNum: 0,
      ext_stat:'',
      // 查询数据
      formInline: {
         date: {
          startday: "",
          endday: ""
        }, // 日期
        userid: "",
        username: "",
        // state: "", // 不需要直播状态
        // 排序列
        // orderByColumn: "id",
        // 排序方式
        // isAsc: "desc",
        // 当前显示条数
        pageSize: 20,
        // 当前显示页数
        pageNum: 1
      },
      // 日期禁用项 禁用大于结束日期
      startOptions: {
        disabledDate: false
      },
      // 日期禁用项 禁用小于开始日期
      endOptions: {
        disabledDate: false
      },
      // ====用户详情弹框=====
      userDetail: {
        timestamp: "",
        userid: ""
      },
      // 表格数据
      tableData: [],
      // 新增/编辑 对话框
      dialogVisible: false,
      title: "标题",
      //====新增/修改=====
      // 表单数据
      ownerForm: {
        name: "",
        loginuser: "",
        create_userid: "",
        account_type: "",
        commission_method: "",
        rate: "",
        group_rate: "",
        member_rate: "",
        account_name: "",
        account_branchs: "",
        account_num: "",
        status: "",
        memo: ""
      },
      // 表单验证
      rules: {
        // 新地址
        houseAddress: [
          { required: true, message: "请输入新地址", trigger: "blur" }
        ],
        // 门牌号
        houseNumber: [
          { required: true, message: "请输入门牌号", trigger: "blur" }
        ]
      }
    };
  },
  created() {
    // 获取默认开始时间和结束时间
    this.formInline.date.startday = preMonthToToday()[0];
    this.formInline.date.endday = preMonthToToday()[1];
    // 调用 获取列表 方法
    this.getOnlineList();
  },
  methods: {
    // 返回
    back() {
      const obj = {
        id: this.obj.id
      };
      this.$emit("changePage", "LIST", obj);
    },
    // 主播数据
    see(row) {
      const obj = {
        id: this.obj.id,
        userid: row.userid
      };
      this.$emit("changePage", "ANCHOR", obj);
    },
    // 子组件调用路由跳转
    changePage(page, obj) {
      this.$emit("changePage", page, obj);
    },
    onSubmit() {
      this.getOnlineList();
    },
    // 获取列表
    getOnlineList() {
      let data = JSON.parse(JSON.stringify(this.formInline));
      data.groupid = this.obj.id;
      data.startday = data.date.startday;
      data.endday = data.date.endday;
      data.offset = (data.pageNum - 1) * data.pageSize;
      delete data.date;
      console.log(data);
      list(data).then(xhrData => {
        if (xhrData.code === 0) {
          this.tableData = xhrData.data.items;
          this.ext_stat = xhrData.data.ext_stat;
          this.totalNum = +xhrData.data.total_rows;
        }
      });
    },
    // 打开查看详情
    async openOrder(title, id) {
      this.title = title;
      if (title === "新增") {
        this.dialogVisible = true;
      } else if (title === "编辑") {
        let res = await get_by_id(id);
        if (res && res.code === 0) {
          this.ownerForm = res.data.item;
          this.dialogVisible = true;
        }
      }
    },
    // 表格排序方式变化
    sortChange({ column, prop, order }) {
      console.log(order);
      // prop : 字段名; order : 排序方式
      this.formInline.orderByColumn = prop;
      let orderBy = "DESC";
      if (order === "ascending") {
        orderBy = "ASC";
      }
      this.formInline.isAsc = orderBy;
    },

    handleCurrentChange(val) {
      // 改变默认的页数
      this.formInline.pageNum = val;
      // 切换页码时，要获取每页显示的条数
      this.getOnlineList();
    },
    // 提交编辑
    submitForm(formName) {
      this.$refs[formName].validate(valid => {
        if (valid) {
          let data = JSON.parse(JSON.stringify(this.ownerForm));
          if (data.commission_method === "2") {
            data.rate = 0;
            data.member_rate = 0;
          }
          console.log(data);
          save_edit(data).then(res => {
            if (res.code === 0) {
              this.$message.success(res.info);
              this.$refs[formName].resetFields();
              this.getOnlineList();
              this.dialogVisible = false;
            }
          });
        } else {
          return false;
        }
      });
    },

    // 重置表单
    resetForm(formName) {
      this.$refs[formName].resetFields();
      this.dialogVisible = false;
    },
    // 删除
    deleteById(id) {
      this.$confirm("是否删除当前项?", "提示", {
        confirmButtonText: "确定",
        cancelButtonText: "取消",
        type: "warning"
      }).then(() => {
        delete_by_id(id).then(res => {
          if (res.code === 0) {
            this.$message.success(res.info);
          }
        });
      });
    },
    //  打开查看用户信息
    openDetail(id) {
      this.userDetail.timestamp = new Date().getTime();
      this.userDetail.userid = id;
    }
  }
};
</script>
