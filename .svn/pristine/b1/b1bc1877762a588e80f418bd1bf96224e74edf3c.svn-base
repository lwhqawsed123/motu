<script>
import {
  list,
  channel,
  get_user_by_id,
  get_for_edit,
  save_edit
} from "@/api/central/users/list.js";
import {
  gengerOptions,
  platformOptions,
  statusOptions
} from "@/utils/options/common.js";
export default {
  name: "users",
  data() {
    return {
      statusOptions: statusOptions,
      platformOptions: platformOptions,
      gengerOptions: gengerOptions,
      // 总条数
      totalNum: 0,
      ext_stat: "", // 后端返回的统计
      // 查询数据
      formInline: {
        date: {
          startday: "",
          endday: ""
        }, // 日期
        status: "", // 状态
        mobile: "", // 手机号
        platform: "", // 设备
        nickname: "", // 昵称
        userid: "", // 用户id
        gender: "", // 性别
        username: "", // 短ID
        channel: "", // 渠道号
        client_id: "", // 下拉框选择的渠道包
        // // 排序列
        // orderByColumn: "id",
        // // 排序方式
        // isAsc: "desc",
        // 开始时间
        startday: "",
        //结束时间
        endday: "",
        // 当前显示条数
        pageSize: 20,
        // 当前显示页数
        pageNum: 1,
        offset: 0
      },
      // 日期禁用项 禁用大于结束日期
      startOptions: {
        disabledDate: false
      },
      // 日期禁用项 禁用小于开始日期
      endOptions: {
        disabledDate: false
      },
      // 表格数据
      tableData: [],
      // 渠道包下拉框
      channelOptions: [],

      // ====用户详情弹框=====
      userDetail: {
        timestamp: "",
        userid: ""
      },
      //====新增/修改=====
      ruleFormDialog: false,
      ruleFormTitle: "",
      // 添加表单数据
      ruleForm: {
        userid: "",
        username: "",
        nickname: "",
        gender: "1",
        signtext: "",
        mobile: "",
        platform: "",
        branchs: "",
        version: "",
        channel: "",
        client_id: "",
        status: "1"
      },
      // 表单验证
      rules: {
        userid: [{ required: true, message: "请输入用户ID", trigger: "blur" }],
        username: [{ required: true, message: "请输入短ID", trigger: "blur" }],
        nickname: [
          { required: true, message: "请输入用户昵称", trigger: "blur" }
        ],
        gender: [{ required: true, message: "请选择性别", trigger: "change" }],
        client_id: [
          { required: true, message: "请输入注册包名", trigger: "blur" }
        ],
        status: [{ required: true, message: "请选择状态", trigger: "change" }]
      }
    };
  },
  created() {
    // 获取默认开始时间和结束时间
    // this.formInline.date=this.getDateNow()
    this.formInline.date.startday = this.getDateNow()[0];
    this.formInline.date.endday = this.getDateNow()[1];
    // 调用 获取列表 方法
    this.getOnlineList();
    // 获取渠道包下拉框列表
    this.getChannelList();
  },
  methods: {
    // 查看
    see(row) {
      const obj = {
        id: row.id,
        orderNo: row.orderNo
      };
      this.$emit("changePage", "SEE", obj);
    },
    onSubmit() {
      this.getOnlineList();
    },
    // 获取列表
    getOnlineList() {
      let data = JSON.parse(JSON.stringify(this.formInline));
      data.startday = data.date.startday;
      data.endday = data.date.endday;
      data.offset = (data.pageNum - 1) * data.pageSize;
      delete data.date;
      list(data).then(xhrData => {
        if (xhrData.code === 0) {
          this.tableData = xhrData.data.items;
          this.totalNum = +xhrData.data.total_rows;
          this.ext_stat = xhrData.data.ext_stat;
        }
      });
    },
    // 获取渠道包列表
    getChannelList() {
      channel().then(xhrData => {
        if (xhrData.code === 0) {
          this.channelOptions = xhrData.data;
        }
      });
    },
    // 筛选渠道包
    checkChannel(client_id) {
      let channelOptions = this.channelOptions.filter(item => {
        return item.value === client_id;
      });
      if (channelOptions.length) {
        return channelOptions[0].label;
      } else {
        return "";
      }
    },
    // 表格排序方式变化
    sortChange({ column, prop, order }) {
      console.log(order);
      // prop : 字段名; order : 排序方式
       if (order) {
        this.formInline.orderByColumn = prop;
      } else {
        this.formInline.orderByColumn = "id";
      }
      let orderBy = "DESC";
      if (order === "ascending") {
        orderBy = "ASC";
      }
      this.formInline.isAsc = orderBy;
      this.getOnlineList();
    },
    handleSizeChange(val) {
      // 注意：在改变每页显示的条数时，要将页码显示到第一页
      this.formInline.pageNum = 1;
      // 改变每页显示的条数
      this.formInline.pageSize = val;
      // 点击每页显示的条数时，显示第一页
      this.getOnlineList();
    },
    handleCurrentChange(val) {
      // 改变默认的页数
      this.formInline.pageNum = val;
      // 切换页码时，要获取每页显示的条数
      this.getOnlineList();
    },
    handlePrev(value) {
      // 设置前一天/后一天
      this.prevDate(this.formInline.date, value);
      this.getOnlineList();
    },
    //  打开查看
    openDetail(id) {
      this.userDetail.timestamp = new Date().getTime();
      this.userDetail.userid = id;
    },
    // 打开编辑弹框
    async openEdit(title, id) {
      this.ruleFormTitle = title;
      if (title === "新增") {
        this.ruleFormDialog = true;
      } else if (title === "编辑") {
        let res = await get_for_edit(id);
        if (res && res.code === 0) {
          this.ruleForm = res.data.item;
          this.ruleFormDialog = true;
        }
      } else {
        return false;
      }
    },
    // 提交编辑
    submitForm(formName) {
      this.$refs[formName].validate(valid => {
        if (valid) {
          let ruleForm = JSON.parse(JSON.stringify(this.ruleForm));
          let data = {
            id: ruleForm.id,
            userid: ruleForm.userid,
            username: ruleForm.username,
            nickname: ruleForm.nickname,
            gender: ruleForm.gender,
            signtext: ruleForm.signtext,
            mobile: ruleForm.mobile,
            platform: ruleForm.platform,
            branchs: ruleForm.branchs,
            version: ruleForm.version,
            channel: ruleForm.channel,
            client_id: ruleForm.client_id,
            status: ruleForm.status
          };

          save_edit(data).then(res => {
            if (res && res.code === 0) {
              this.$message.success({
                message: res.info
              });
              this.closeRulesFormDialog(formName);
              this.getOnlineList();
            }
          });
        } else {
          return false;
        }
      });
    },
    closeRulesFormDialog(formName) {
      this.$refs[formName].resetFields();
      this.ruleFormDialog = false;
    }
  }
};
</script>
